{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noLib": false,
    "noUnusedLocals": true,
    "outDir": "build",
    "removeComments": true,
    "sourceMap": false,
    "target": "es6",
    "types": ["node"],
    "lib": [
      "es7"
    ]
  },
  "exclude": [
    "node_modules",
    "config"
  ]
}
